
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    
    <div class="map-container" style="height: 400px; width: 100%;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.9949790927406!2d106.6754796!3d10.9805247!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174d1085e2b1c37%3A0x73bfa5616464d0ee!2zVGjhu6luaCBBbiBD4buHbiBN4buHdCB0aW5o!5e0!3m2!1svi!2s!4v1694291604500"
