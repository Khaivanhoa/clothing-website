
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container-fluid mb-5 px-0">
    <div class="row border-top px-0" style="width: 100vw; margin: 0;">
        <div class="col-12 px-0" style="padding: 0; margin: 0;">
            <div id="header-carousel" class="carousel slide" data-ride="carousel" style="width: 100vw; height: 100vh;">
                <div class="carousel-inner" style="width: 100vw; height: 100vh;">
                    <div class="carousel-item active" style="width: 100vw; height: 100vh;">
                        <img class="img-fluid" src="~/Content/img/slider.png" alt="Image" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="carousel-item" style="width: 100vw; height: 100vh;">
                        <img class="img-fluid" src="~/Content/img/slider_2.png" alt="Image" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="carousel-item" style="width: 100vw; height: 100vh;">
                        <img class="img-fluid" src="~/Content/img/slider_3.jpg" alt="Image" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                </div>

                <a class="carousel-control-prev" href="#header-carousel" role="button" data-slide="prev">
                    <div class="" style="width: 45px; height: 45px;">
                        <span class="carousel-control-prev-icon mb-n2"></span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#header-carousel" role="button" data-slide="next">
                    <div class=" style="width: 45px; height: 45px;">
                        <span class="carousel-control-next-icon mb-n2"></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

